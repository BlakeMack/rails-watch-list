<h1>Lists#show</h1>
<h2><%= @list.name.upcase %></h2>

<h3><%= link_to "Add a movie", new_list_bookmark_path(@list) %>

<% @list.bookmarks.each do |bm| %>
    <div class="card">
        <h2><%= bm.movie.title %></h2>
        <p><%= bm.movie.overview %></p>
        <p><%= bm.comment %></p>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(bm), data: {turbo_method: :delete} %>
    </div>
<% end %>

<h3><%= link_to "go back to your movie lists!", lists_path  %></h3>

